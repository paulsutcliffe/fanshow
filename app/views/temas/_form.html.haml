= form_for @tema do |f|
  - if @tema.errors.any?
    #error_explanation
      %h2= "#{pluralize(@tema.errors.count, "error")} prohibited this tema from being saved:"
      %ul
        - @tema.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :nombre
    = f.text_field :nombre
  .actions
    = f.submit 'Save'
